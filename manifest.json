{
  "manifest_version": 3,
  "name": "The Answer 2 AI",
  "version": "1.0.0",
  "description": "Replaces mentions of 'AI' on LinkedIn with Allen Iverson fun facts",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ai2ai_backgroundv3.jpg", "AI2AI_Icon.jpg", "Basketball.otf"],
      "matches": ["https://*.linkedin.com/*"]
    }
  ],
   "icons": {
   "128": "AI2AI_Icon.jpg"
 }
}
